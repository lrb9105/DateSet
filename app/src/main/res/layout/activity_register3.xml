<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_register"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">
    <include
        android:id="@+id/include_upper2"
        layout="@layout/include_main_upper2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@null"
            app:srcCompat="@drawable/common_back" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/register_not_underline3"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange" />

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tb_id">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_boy">
                </de.hdodenhof.circleimageview.CircleImageView>
            </TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:background="@null"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange"
                android:layout_marginTop="5dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:textSize="22sp"
                    android:hint="@string/name"
                    android:background="@null"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText_nickName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:textSize="22sp"
                    android:hint="@string/nick_name"
                    android:background="@null"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_phoneNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="3"
                    android:textSize="22sp"
                    android:inputType="phone"
                    android:background="@null"
                    android:hint="@string/phone_num"/>

                <Button
                    android:id="@+id/btn_certification"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/certification"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/black"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="3"
                    android:textSize="22sp"
                    android:inputType="number"
                    android:background="@null"
                    android:hint="@string/certification_num"/>

                <LinearLayout
                    android:id="@+id/layout_timer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/textView_timer_remain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:background="@null"
                        android:text="남은시간"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:inputType="text"
                        android:background="@null"
                        android:text="05:00"
                        android:textColor="@color/red"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/confirm"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/black"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange" />

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/textview_first_day_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="17sp"
                android:text="@string/first_day"
                android:textColor="@color/black"
                android:background="@null"/>
            <TextView
                android:id="@+id/textview_first_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="3"
                android:textSize="22sp"
                android:inputType="number"
                android:background="@null"
                android:hint="@string/first_day"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange" />

            <TableRow
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/textView_private_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="3"
                    android:textSize="17sp"
                    android:inputType="number"
                    android:textColor="@color/red"
                    android:hint="@string/private_info"/>
                <CheckBox
                    android:id="@+id/checkbox_private_info"
                    />
            </TableRow>


            <Button
                android:id="@+id/btn_registerComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_complete3"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>
        </TableLayout>
    </ScrollView>
</LinearLayout>


