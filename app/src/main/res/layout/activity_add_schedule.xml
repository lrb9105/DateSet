<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:background="@null"
                app:srcCompat="@drawable/common_back" />

            <TextView
                android:id="@+id/textView_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_schedule"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="공동"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/light_blue"
                android:textSize="25dp">
            </TextView>

            <TextView
                android:id="@+id/textView_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="본인"
                android:layout_weight="1"
                android:background="@color/light_yellow"
                android:textSize="25dp">
            </TextView>

            <TextView
                android:id="@+id/textView_opponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="상대방"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/light_brown"
                android:textSize="25dp">
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"></View>

        <EditText
            android:id="@+id/editText_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/orange"
            android:ems="10"
            android:hint="제목"
            android:inputType="text"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText_place"
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/orange"
            android:ems="10"
            android:hint="위치"
            android:inputType="text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView_date_title"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:inputType="text"
            android:text="날짜"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView_sch_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작"
                android:textSize="20dp"
                android:layout_weight="1">
            </TextView>
            <TextView
                android:id="@+id/textView_sch_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="2021년 1월 14일(목)"
                android:textSize="17dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/textView_sch_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="오후 1:44"
                android:textSize="17dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView_sch_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종료"
                android:textSize="20dp"
                android:layout_weight="1">
            </TextView>
            <TextView
                android:id="@+id/textView_sch_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="2021년 1월 14일(목)"
                android:textSize="17dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/textView_sch_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="오후 2:44"
                android:textSize="17dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>

<!--        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반복"
                android:textSize="20dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/textView_repeat_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="안함"
                android:textSize="20dp"
                android:paddingRight="13dp"
                android:gravity="right">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_repeat"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView_repeat_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반복종료"
                android:textSize="20dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/textView_repeat_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="13dp"

                android:textSize="17dp"></TextView>
